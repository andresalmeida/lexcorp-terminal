    </div>

    <script>
      // Time update for portfolio
      function updatePortfolioTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString([], { hour12: false });
        const timeElement = document.getElementById('portfolio-time');
        if (timeElement) {
          timeElement.textContent = timeString;
        }
      }

      // Boot sequence animation
      function startPortfolioBoot() {
        const bootElement = document.getElementById('portfolio-boot');
        const welcomeElement = document.getElementById('portfolio-welcome');
        
        if (bootElement && welcomeElement) {
          setTimeout(() => {
            bootElement.style.opacity = '0';
            setTimeout(() => {
              bootElement.style.display = 'none';
              welcomeElement.style.opacity = '1';
              welcomeElement.style.transition = 'opacity 0.5s ease-in';
            }, 500);
          }, 3000);
        }
      }

      // Initialize
      updatePortfolioTime();
      setInterval(updatePortfolioTime, 1000);
      startPortfolioBoot();
    </script>
  </body>
